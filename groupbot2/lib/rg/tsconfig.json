{
	"compilerOptions": {
		"declaration": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"lib": ["es6"],
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "dist",
		"rootDir": "src",
		"allowJs": true
	}
}